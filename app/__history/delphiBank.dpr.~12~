program delphiBank;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  System.SysUtils,
  Tests in 'Tests.pas';

var
  UserInput : string;

begin

  try

    //  Greet the user
    GreetUser();

    //  Begin program main loop
    Writeln('What would you like to do?');
    Writeln('(1 - Create an account, 2 - Make a deposit, 3 - Make a withdrawal, 4 - Generate a statement)');

    Readln(UserInput);

  except

    on E: Exception do
      Writeln(E.ClassName, ': ', E.Message);

  end;

end.
